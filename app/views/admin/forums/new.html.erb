<h1>Create New Forum</h1>
<%= form_for @forum, url: { action: :create }, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :name, "League" %>
    </div>
    <div class="col-sm-10">
      <%= f.select :league_id, option_groups_from_collection_for_select(Region.all, :leagues, :name, :id, :name) %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :url, "Url" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :url %>
    </div>
  </div>
  <%= f.submit "Create", class: 'btn btn-success' %>
<% end %>