<h1>Create New League</h1>
<%= form_for @league, url: { action: :create }, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :name, "League Name" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :region, "Region" %>
    </div>
    <div class="col-sm-10">
      <%= f.select :region_id, options_from_collection_for_select(Region.all, :id, :name) %>
    </div>
  </div>
  <%= f.submit "Create", class: 'btn btn-success' %>
<% end %>